{
  "mcpServers": {
    "apk_signer": {
      "type": "local",
      "command": "docker",
      "args": [ 
        "run", "-i", "--rm", 
        "-v", "/github/workspace:/workspace", 
        "-w", "/workspace", 
        "ghcr.io/millionthodin16/lanbu:latest", 
        "python3", "uber-apk-signer-mcp-server.py" 
      ],
      "tools": ["*"]
    },
    "keytool_generator": {
      "type": "local",
      "command": "docker",
      "args": [ 
        "run", "-i", "--rm", 
        "-v", "/github/workspace:/workspace", 
        "-w", "/workspace", 
        "ghcr.io/millionthodin16/lanbu:latest", 
        "python3", "keytool-mcp-server.py" 
      ],
      "tools": ["*"]
    },
    "downloader": {
      "type": "local",
      "command": "docker",
      "args": [ 
        "run", "-i", "--rm", 
        "-v", "/github/workspace:/workspace", 
        "-w", "/workspace", 
        "ghcr.io/millionthodin16/lanbu:latest", 
        "python3", "downloader.py" 
      ],
      "tools": ["*"]
    },
    "apk_tool": {
      "type": "local",
      "command": "docker",
      "args": [ 
        "run", "-i", "--rm", 
        "-v", "/github/workspace:/workspace", 
        "-w", "/workspace", 
        "ghcr.io/millionthodin16/lanbu:latest", 
        "apktool-mcp-server" 
      ],
      "tools": ["*"],
      "env": {
        "APKTOOL_WORKSPACE": "/workspace/apktool_workspace"
      }
    }
  }
}